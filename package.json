{
  "name": "@kristofajosh/email-templates",
  "version": "3.7.0",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn gen:templates && email build",
    "dev": "yarn gen:templates && email dev",
    "start": "yarn gen:templates && email start",
    "gen:email": "plop",
    "gen:templates": "node scripts/generate-email-index.mjs",
    "test:templates": "node scripts/check-templates.mjs",
    "export": "email export",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "build:api": "yarn gen:templates && tsc -p tsconfig.node.json && tsc-alias -p tsconfig.node.json",
    "start:api": "node dist/server.js",
    "dev:api": "tsx server.ts",
    "build:types": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn gen:templates && yarn build:types",
    "rename-scope": "bash scripts/rename-scope.sh"
  },
  "files": [
    "dist"
  ],
  "types": "dist/src/index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "@react-email/components": "1.0.3",
    "clsx": "2.1.1",
    "cors": "^2.8.5",
    "date-fns": "4.1.0",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "3.4.0"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@react-email/preview-server": "5.1.1",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "globals": "17.0.0",
    "plop": "4.0.4",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "react-email": "5.1.1",
    "tsc-alias": "1.8.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.51.0"
  },
  "author": {
    "name": "Enyi-Christopher Joshua",
    "email": "christopherjoshua18@live.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KristofaJosh/react-email-template-bootstrap-example.git",
    "directory": "src"
  },
  "publishConfig": {
    "@kristofajosh:registry": "https://npm.pkg.github.com"
  }
}
